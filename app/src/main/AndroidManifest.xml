<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ithinkbest.phoneix.assistant" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.ithinkbest.phoneix.assistant.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.ithinkbest.phoneix.assistant.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".opendata.GcisActivity"
            android:label="@string/title_activity_gcis" >
        </activity>
        <activity
            android:name=".opendata.OpenDataActivity"
            android:label="@string/title_activity_open_data" >
        </activity>
        <activity
            android:name=".opendata.CityListActivity"
            android:label="@string/title_activity_city_list" >
        </activity>

        <provider
            android:name=".SurveyProvider"
            android:authorities="com.ithinkbest.phoneix.assistant.SurveyProvider"
            android:exported="false"
            android:syncable="true" />

        <activity
            android:name=".opendata.CmpRpt1Activity"
            android:label="@string/title_activity_cmp_rpt1" >
        </activity>
        <activity
            android:name=".survey.SurveyActivity"
            android:label="@string/title_activity_survey" >
        </activity>
        <activity
            android:name=".survey.Survey001Activity"
            android:label="@string/title_activity_s1" >
        </activity>
        <activity
            android:name=".survey.Survey002Activity"
            android:label="@string/title_activity_s2" >
        </activity>
        <activity
            android:name=".gcm.ToGooglePlayActivity"
            android:label="ToGooglePlayActivity" >
        </activity>
        <activity
            android:name=".gcm.ToGcmActivity"
            android:label="ToGcmActivity" >
        </activity>

        <receiver
            android:name=".gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.ithinkbest.phoneix.assistant" />
            </intent-filter>
        </receiver>

        <service android:name=".gcm.GcmMessageHandler" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".survey.CheckSurveyResultActivity"
            android:label="@string/title_activity_check_survey_summary" >
        </activity>
        <activity
            android:name=".survey.CheckSurveyResult001Activity"
            android:label="@string/title_activity_check_survey_result001" >
        </activity>
    </application>

</manifest>
